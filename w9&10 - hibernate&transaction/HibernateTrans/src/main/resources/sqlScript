CREATE TABLE DEAL(
DEAL_ID INTEGER NOT NULL AUTO_INCREMENT,
DEAL_DESC varchar(40),
DEAL_START_DATE timestamp(6),
DEAL_MATURITY_DATE timestamp(6),
CONSTRAINT PK_DEAL PRIMARY KEY(DEAL_ID));

CREATE TABLE FACILITY(
DEAL_ID INTEGER NOT NULL,
FACILITY_ID INTEGER NOT NULL AUTO_INCREMENT,
FACILITY_START_DATE timestamp(6),
FACILITY_MATURITY_DATE timestamp(6),
FACILITY_AMOUNT integer,
CONSTRAINT PK_FACILITY PRIMARY KEY (FACILITY_ID),
CONSTRAINT FK_FACILITY FOREIGN KEY (DEAL_ID)
REFERENCES DEAL (DEAL_ID));

CREATE TABLE DRAWDOWN(
DRAWDOWN_ID INTEGER NOT NULL AUTO_INCREMENT,
FACILITY_ID INTEGER NOT NULL,
DRAWDOWN_DESC VARCHAR(40),
DRAWDOWN_AMOUNT INTEGER,
CONSTRAINT PK_DRAWDOWN PRIMARY KEY (DRAWDOWN_ID),
CONSTRAINT FK_DRAWDOWN FOREIGN KEY (FACILITY_ID)
REFERENCES FACILITY (FACILITY_ID));

COMMIT;